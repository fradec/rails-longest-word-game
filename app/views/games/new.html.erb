<% @letters.each do |letter| %>
  <li><%= letter %></li>
<% end %>

<p id="message">What is the longest world you can find?</p>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word_input">
  <input type="submit" value="Submit your word">
</form>
